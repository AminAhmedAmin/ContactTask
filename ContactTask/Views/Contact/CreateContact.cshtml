@model ContactTask.ViewModels.AddContactViewModel;

@{
    ViewData["Title"] = "AddContact";
}


<div class="form-container">
    <h2>Contact Form</h2>
    <form  asp-action="CreateContact" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="name">Name:</label>
            <input asp-for="Name" type="text" id="name" name="name" >
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label asp-for="Phone">Phone:</label>
            <input asp-for="Phone" type="number" id="Phone" name="Phone" >
            <span asp-validation-for="Phone" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label asp-for="Adress">Adress:</label>
            <input asp-for="Adress" type="text" id="Adress" name="Adress">
            <span asp-validation-for="Adress" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" type="text" id="Notes" name="Notes" >
            <span asp-validation-for="Notes" class="text-danger"></span>

        </div>


        <button class="submit-button" type="submit">Add Contact</button>

        <a asp-controller="Contact" asp-action="Index" class="btn-back">Back</a>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
